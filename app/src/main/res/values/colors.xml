    <!-- Elige una paleta de las de arriba para definir tu tema actual -->

    <!-- Colores principales de la marca (usando la paleta azul como ejemplo) -->
    <color name="colorPrimary">@color/blue_primary</color>
    <color name="colorPrimaryVariant">@color/blue_primary_dark</color>
    <color name="colorOnPrimary">@color/white</color> <!-- Texto/iconos sobre el color primario -->

    <!-- Colores secundarios -->
    <color name="colorSecondary">@color/blue_accent</color>
    <color name="colorSecondaryVariant">@color/blue_accent</color>
    <color name="colorOnSecondary">@color/black</color> <!-- Texto/iconos sobre el color secundario -->

    <!-- Colores de la UI -->
    <color name="colorBackground">@color/grey_light</color> <!-- Fondo general de la app -->
    <color name="colorOnBackground">@color/black</color> <!-- Texto/iconos sobre el fondo -->
    <color name="colorSurface">@color/white</color> <!-- Color para "superficies" como cards, menús, etc. -->
    <color name="colorOnSurface">@color/black</color> <!-- Texto/iconos sobre superficies -->

    <!-- Colores de error -->
    <color name="colorError">@color/error_red</color>
    <color name="colorOnError">@color/white</color>

